# See dunst(5) for all configuration options

[global]
    background = "#0e0922"
    foreground = "#cfbbe2"
    frame_color = "#B26DBF"
    corner_radius = 12
    frame_width = 3
    gap_size = 0
    width = 300
    height = 300
    origin = bottom-right
    offset = 12x24
    progress_bar_corner_radius = 12
    font = Roboto 10
    icon_theme = "Adwaita-dark, Adwaita"
    enable_recursive_icon_lookup = true
    icon_position = left
    icon_path = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/
    min_icon_size = 24
    max_icon_size = 64
    mouse_left_click = do_action, close_current
    mouse_right_click = close_current

    monitor = 0
    follow = none

    scale = 0
    notification_limit = 20
    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    icon_corner_radius = 0

    indicate_hidden = yes
    transparency = 0
    separator_height = 0
    padding = 8
    horizontal_padding = 8
    text_icon_padding = 0
    separator_color = frame
    sort = yes

    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    ellipsize = middle

    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes
    sticky_history = yes
    history_length = 20

    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/xdg-open

    always_run_script = true
    title = Dunst
    class = Dunst

[experimental]
    per_monitor_dpi = false


[urgency_low]
    timeout = 3

[urgency_normal]
    timeout = 7

[urgency_critical]
    background = "#900000"
    foreground = "#ffffff"
    frame_color = "#ff0000"
    timeout = 0

